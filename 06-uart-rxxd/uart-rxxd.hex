13 00 00 00  # nop
13 00 00 00  # nop
13 00 00 00  # nop
13 00 00 00  # nop

# Initialise UART; see comments in 05-uart/uart.hex for a detailed explanation
# of what these instructions are doing.
b7 27 01 10  # lui a5, 0x10012
93 87 c7 03  # addi a5, a5, 0x3c
03 a5 07 00  # lw a0, 0(a5)
93 05 30 00  # addi a1, x0, 0x3
93 95 05 01  # slli a1, a1, 0x10
b3 05 b0 40  # neg a1, a1 # sub a1, x0, a1
33 f5 a5 00  # and a0, a1, a0
23 a0 a7 00  # sw a0, 0(a5)
93 87 87 ff  # addi a5, a5, -0x8
03 a5 07 00  # lw a0, 0(a5)
b3 05 b0 40  # neg a1, a1 # sub a1, x0, a1
33 65 b5 00  # or a0, a0, a1
b7 37 01 10  # lui a5, 0x10013
93 87 87 01  # addi a5, a5, 0x18
13 05 a0 08  # addi a0, x0, 0x8a
23 a0 a7 00  # sw a0, 0(a5)
93 87 07 ff  # addi a5, a5, -0x10
13 05 10 00  # addi a0, x0, 0x1
23 a0 a7 00  # sw a0, 0(a5)
93 87 47 00  # addi a5, a5, 0x4
13 05 10 00  # addi a0, x0, 0x1
23 a0 a7 00  # sw a0, 0(a5)


# Pad to 0x80
13 00 00 00  # nop
13 00 00 00  # nop


# Register allocation:
# t0 / x05: current word
# t1 / x06: shift for placement in word
# t2 / x07: byte shift, starts at 4
# s0 / x08: scratch register used for comparison values
# s1 / x09: scratch register used for comparison values
# a0 / x10: current received byte from UART
# a1 / x11: tmp scratch area for reading from UART
# a2 / x12: 0x8000_0000 (used for reading/writing UART)
# a4 / x14: RAM write pointer, starts at 0x8000_0000
# a5 / x15: UART0_TXDATA = 0x10013000 (write UART)
# a6 / x16: UART0_RXDATA = 0x10013004 (receive UART)
# a7 / x17: 0xa (used for comparing in comment mode)
# s2 / x18: 0x20 (used for comparing t1)
# s3 / x19: current little endian byte
# s4 / x20: flags, where nonx0 means we're in comment mode
# s5 / x21: the location to which we jump when we're done
#            accepting input. same as the initial value of a4

93 02 00 00  # mv t0, x0 == addi t0, x0, 0x0
13 03 00 00  # mv t1, x0 == addi t1, x0, 0x0
93 03 40 00  # addi t2, x0, 0x4
13 04 00 00  # mv s0, x0 == addi s0, x0, 0x0
93 04 00 00  # mv s1, x0 == addi s1, x0, 0x0
13 05 00 00  # mv a0, x0 == addi a0, x0, 0x0
93 05 00 00  # mv a1, x0 == addi a1, x0, 0x0
37 06 00 80  # lui a2, 0x80000
37 07 00 80  # lui a4, 0x80000
b7 37 01 10  # lui a5, 0x10013
13 88 47 00  # addi a6, a5, 0x4
93 08 a0 00  # addi a7, x0, 0xa
13 09 00 02  # addi s2, x0, 0x20
93 09 00 00  # addi s3, x0, 0x00
13 0a 00 00  # addi s4, x0, 0x00
93 0a 07 00  # mv s5, a4 == addi s5, a4, 0x0

# b0: .READ_UART
# Read a byte from UART
03 25 08 00  # lw a0, 0(a6)
b3 75 c5 00  # and a1, a0, a2 # mask EMPTY bit
e3 9c 05 fe  # bnez a1, -8 == bne a1, x0, -8
13 75 f5 0f  # andi a0, a0, 0xFF

13 00 00 00  # nop
13 00 00 00  # nop
13 00 00 00  # nop

# If we're in comment mode, ignore everything that isn't 0xa
# Since we only have 1 flag at the moment, we just skip comment mode
# if the flags register is x0

63 02 0a 02  # beq s4, x0, 0x24

# d0: Comment mode: skip anything which isn't 0xa
63 16 15 01  # bne a0, a7, +0x8
13 0a 00 00  # addi s4, x0, 0x0
13 00 00 00  # nop
e3 0a 00 fc  # beq x0, x0, .READ_UART

13 00 00 00  # nop
13 00 00 00  # nop
13 00 00 00  # nop
13 00 00 00  # nop

# f0: If we're here, we're not in comment mode
# We need to check if we got 0x23 (#) and if so,
# enter comment mode

13 04 30 02  # addi s0, x0, 0x23
63 1a 85 00  # bne a0, s0, 0x14

# We got a #, so enter comment mode
13 0a 10 00  # addi s4, x0, 0x1
e3 0a 00 fa  # beq x0, x0, .READ_UART (-0x4C)
13 00 00 00  # nop
13 00 00 00  # nop

# 108: If we didn't get 0x23, then we can ignore anything below 0x30 ('0')
13 04 00 03  # addi s0, x0, 0x30
63 58 85 00  # bge a0, s0, +0x10
13 00 00 00  # nop
13 00 00 00  # nop
e3 0c 00 f8  # beq x0, x0, .READ_UART

# The value is >= 0x30, so it could be a hex char
# If the value is less than 0x3a, we just subtract 0x30 and that's the value
13 04 a0 03  # addi s0, x0, 0x3a
63 5a 85 00  # bge a0, s0, +0x14

# We got a value in the range 0x30 - 0x39 inclusive. Subtract 0x30 and we have our raw value
13 05 05 fd  # addi a0, a0, -0x30
13 00 00 00  # nop
13 00 00 00  # nop
63 00 00 04  # beq x0, x0, +.ADDRAW +0x40

# Otherwise, we got a value >= 0x3A, so it could be a lower or uppercase letter.
# We OR the a0 register with 0x20 to force lowercase, and then check that the value is in
# the range 0x61 ('a') to 0x66 ('f'). If it is, we subtract 0x57 to get the raw value
# in the range 0xA - 0xF

13 65 05 02  # ori  a0, a0, 0x20
13 04 10 06  # addi s0, x0, 0x61
63 48 85 08  # blt  a0, s0, .PANIC +0x90
13 04 70 06  # addi s0, x0, 0x67
63 46 a4 00  # blt  s0, a0, +0xC (check for `j`)
13 05 95 fa  # addi a0, a0, -0x57
63 02 00 02  # beq x0, x0, +.ADDRAW +0x24

# Check if we got a "j" - if so, jump to the starting point where we began writing
# instructions we received, which is stored in s5

13 04 a0 06  # addi s0, x0, 0x6A
63 1c 85 06  # bne a0, s0, .PANIC + 0x78

# If we're here, we need to jump to the location in s5
# but first, we need to write an infinite loop instruction to the location stored in a4
# so that we don't jump to s5, execute a few instructions and then hit an invalid
# 0000_0000 instruction and trap

13 05 30 06  # addi a0, x0, 0x63
23 20 a7 00  # sw a0, 0(a4)
67 80 0a 00  # jalr x0, s5, 0x00
13 00 00 00  # nop
13 00 00 00  # nop
13 00 00 00  # nop

# 170: ADDRAW: we got a value to be added to our "running word" which will be written
# when it's complete.
# We shift left by some multiple of 4 bits and OR the resulting value with the
# running value in t0. If we shifted left by K, we reset the shift amount and write
# t0 to the RAM at a4 and increment a4 by 4.
# After all steps, we jump back and read another byte from UART.

33 15 75 00  # sll a0, a0, t2
b3 e9 a9 00  # or s3, s3, a0
63 8a 03 00  # beq t2, x0, +0x14
93 03 00 00  # addi t2, x0, 0x00
e3 08 00 f2  # beq x0, x0, READ_UART -0xb0
13 00 00 00  # nop
13 00 00 00  # nop

# 18c: ADDBYTE
93 03 40 00  # addi t2, x0, 0x4
b3 99 69 00  # sll s3, s3, t1
b3 e2 32 01  # or t0, t0, s3
93 09 00 00  # addi s3, x0, 0x00
13 03 83 00  # addi t1, t1, 0x8

63 08 23 01  # beq t1, s2, 0x10
e3 06 00 f0  # beq x0, x0, READ_UART -0xf0
13 00 00 00  # nop
13 00 00 00  # nop

# 1b0: WRITEWORD

23 20 57 00  # sw t0, 0(a4)
13 07 47 00  # addi a4, a4, 0x4
93 02 00 00  # addi t0, x0, 0x0
13 03 00 00  # addi t1, x0, 0x0
13 00 00 00  # nop
13 00 00 00  # nop
e3 04 00 ee  # beq x0, x0, READ_UART -0x118

# 1cc: PANIC
13 00 00 00  # nop
13 00 00 00  # nop
13 00 00 00  # nop
13 00 00 00  # nop
63 00 00 00  # beq x0, x0, 0 # hang
